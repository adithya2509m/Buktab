<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"



    xmlns:float="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:editable="false"
        android:textColor="@color/primary_dark"
        android:text="Filter Search Result"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="1dp"
        android:background="@color/primary_dark" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="20dp"


    android:id="@+id/increase">
    <Button
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/decrease"
        android:id="@+id/semdec"/>

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/semdrop"

        />
    <Button
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:id="@+id/seminc"
        android:background="@drawable/increase"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/decrease"
            android:id="@+id/deptdec"
            />
    <Spinner

        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:id="@+id/deptdrop"

        />

    <Button
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:id="@+id/deptinc"
        android:background="@drawable/increase"/>
</LinearLayout>

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:id="@+id/location"
        android:dropDownHeight="175dp"

        android:ems="10"
        android:completionThreshold="2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

    <Button

        android:layout_width="match_parent"
        android:id="@+id/filter"
        android:textColor="#ffffff"
        android:background="@color/primary_dark"
        android:layout_height="wrap_content"
        android:text="filter"
        android:layout_weight="1"
        />

        <ImageButton


            android:layout_width="match_parent"
            android:id="@+id/removefilter"
           android:visibility="gone"
            android:background="#e53935"
            android:layout_height="match_parent"
            android:src="@drawable/removefilter"

            android:layout_weight="5"
            />








    </LinearLayout>
</LinearLayout>